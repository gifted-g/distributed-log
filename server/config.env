# Default configuration for logscan.sh

LOG_ROOT=/var/log/remote
WINDOW_MINUTES=5

THRESHOLD_IP=5
THRESHOLD_USER=8

ALERT_COOLDOWN_MIN=30

# Slack webhook (leave blank to disable Slack alerts)
SLACK_WEBHOOK_URL=

# Email alerts (requires 'mail' command configured on the server)
ENABLE_EMAIL=0
MAIL_TO=alerts@example.com
MAIL_SUBJECT_PREFIX=[LogScan]
